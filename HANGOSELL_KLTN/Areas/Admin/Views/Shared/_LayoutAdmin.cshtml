    <link rel="stylesheet" href="@Url.Content("~/Client/plugins/select2/css/select2.min.css")"> *@
    <link href="~/Client/css/toastr.min.css" rel="stylesheet" />
    <link href="~/client/css/style.css" rel="stylesheet" />
    <link href="~/Client/css/feather.css" rel="stylesheet" />
    <link href="~/Client/css/ckeditor.css" rel="stylesheet" />
    <link href="~/Client/css/bootstrap-datetimepicker.min.css" rel="stylesheet" />
   
</head>

<body>
    <div class="main-wrapper">
        @* header *@
        @await Html.PartialAsync("_header")

        @* side bar *@
        @await Html.PartialAsync("_Sidebar")

        @* content page *@
        <div class="content-wrapper">
            <!-- Nội dung của trang -->
            @RenderBody()
        </div>

        @* footer *@
        @await Html.PartialAsync("_footer")
    </div>

    @await Html.PartialAsync("_script")
    <script>
        $(document).ready(function () {
            $('.select2-hidden-accessible').select2({
                closeOnSelect: false
            });
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
