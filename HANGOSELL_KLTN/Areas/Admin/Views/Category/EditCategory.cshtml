@model HANGOSELL_KLTN.Models.EF.Category

@{
    ViewData["Title"] = "Edit Category";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="page-wrapper">
    <div class="content container-fluid">
        <div class="page-header">
            <div class="row align-items-center">
                <div class="col">
                    <h3 class="page-title">Edit Category</h3>
                    <ul class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/Admin/Category">Category</a></li>
                        <li class="breadcrumb-item active">Edit Category</li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-12">
                <div class="card-body">
                    <form action="/Admin/Category/Edit" method="post" enctype="multipart/form-data">
                        <input type="hidden" asp-for="category.Id" class="form-control" id="Id" name="Id" value="@Model.Id" />
                        <div class="row">
                            <div class="col-12 col-sm-4">
                                <div class="form-group local-forms">
                                    <label asp-for="category.Title" class="form-label">Category Name</label>
                                    <input asp-for="category.Title" class="form-control" id="Title" name="Title" value="@Model.Title" />
                                    <span asp-validation-for="Title" class="text-danger"></span>
                                </div>
                            </div>


                            <div class="col-12 col-sm-4">
                                <div class="form-group local-forms">
                                    <label asp-for="Description" class="form-label">Description</label>
                                    <input asp-for="Description" class="form-control" id="Description" name="Description" value="@Model.Description">
                                    <span asp-validation-for="Description" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="col-12 col-sm-4">
                                <div class="form-group local-forms">
                                    <label asp-for="Position" class="form-label">Position</label>
                                    <input asp-for="Position" type="number" class="form-control" id="Position" name="Position" value="@Model.Position" />
                                    <span asp-validation-for="Position" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="col-12 col-sm-4">
                                <div class="form-group local-forms">
                                    <label asp-for="SeoTitle" class="form-label">SEO Title</label>
                                    <input asp-for="SeoTitle" class="form-control" id="SeoTitle" name="SeoTitle" value="@Model.SeoTitle" />
                                    <span asp-validation-for="SeoTitle" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="col-12 col-sm-4">
                                <div class="form-group local-forms">
                                    <label asp-for="SeoKeyword" class="form-label">SEO Keyword</label>
                                    <input asp-for="SeoKeyword" class="form-control" id="SeoKeyword" name="SeoKeyword" value="@Model.SeoKeyword" />
                                    <span asp-validation-for="SeoKeyword" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="col-12 col-sm-4">
                                <div class="form-group local-forms">
                                    <label asp-for="SeoDescription" class="form-label">SEO Description</label>
                                    <input asp-for="SeoDescription" class="form-control" id="SeoKeyword" name="SeoKeyword" value="@Model.SeoKeyword">
                                    <span asp-validation-for="SeoDescription" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="col-12">
                                <div class="student-submit">
                                    <button type="submit" class="btn btn-primary">Save Changes</button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

