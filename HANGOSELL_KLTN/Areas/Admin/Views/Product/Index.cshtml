@model List<HANGOSELL_KLTN.Models.EF.Product>
@using HANGOSELL_KLTN.Configuration
@inject SharedViewLocalizer _localizer
@{
    ViewData["Title"] = "List Product";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="page-wrapper">
    <div class="content container-fluid">
        <div class="page-header">

            <div class="row align-items-center">
                <div class="col">
                    <h3 class="page-title">@_localizer.GetLocalizedString("List") @_localizer.GetLocalizedString("Product")</h3>
                    <div class="col-auto text-end float-end ms-auto download-grp">
                        <a href="/Admin/Product/Download" class="btn btn-outline-success me-2">
                            <i class="fas fa-download"></i> @_localizer.GetLocalizedString("Export")
                        </a>
                        <a href="/Admin/Product" class="btn btn-outline-gray me-2 active">
                            <i class="fa fa-list" aria-hidden="true"></i>
                        </a>
                        <a href="/Admin/Product/CreateProduct" class="btn btn-outline-gray me-2">
                            <i class="fas fa-plus"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>
        <div>
            <div class="row">
                <div class="card bg-comman w-100">
                    <div class="card-body">

                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    
                                    <th class="text-center">STT</th>
                                    <th class="text-center">@_localizer.GetLocalizedString("Title")</th>
                                    <th class="text-center">@_localizer.GetLocalizedString("Product Code")</th>
                                    <th class="text-center">@_localizer.GetLocalizedString("Category")</th>
                                    <th class="text-center">@_localizer.GetLocalizedString("Price")</th>
                                    <th class="text-center">@_localizer.GetLocalizedString("Sale Price")</th>
                                    <th class="text-center">@_localizer.GetLocalizedString("Quantity")</th>
                                    <th class="text-center">@_localizer.GetLocalizedString("Image")</th>
                                    <th class="text-center">@_localizer.GetLocalizedString("Action")</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        
                                        <td class="text-center">@item.Id</td>
                                        <td class="text-center">@item.Title</td>
                                        <td class="text-center">@item.ProductCode</td>
                                        <td class="text-center">@item.ProductCategory.Title</td>
                                        
                                        <td class="text-center">@item.Price.ToString("N0") đ</td>
                                        <td class="text-center">@item.PriceSale?.ToString("N0") đ</td>
                                        <td class="text-center">@item.Quantity</td>
                                        <td class="text-center">
                                            @if (!string.IsNullOrEmpty(item.Image))
                                            {
                                                <img src="~/@item.Image" alt="Product Image" style="width: 50px; height: auto;" />
                                            }
                                            else
                                            {
                                                <span>No Image</span>
                                            }
                                        </td>
                                        <td class="text-center">
                                            <a href="/Admin/Product/EditProduct/@item.Id" class="btn btn-sm btn-warning">
                                                <i class="fa fa-edit"></i>
                                            </a>
                                            <a href="/Admin/Product/DetailProduct/@item.Id" class="btn btn-sm btn-info">
                                                <i class="fa fa-info-circle"></i>
                                            </a>
                                            <a href="/Admin/Product/Delete/@item.Id" class="btn btn-sm btn-danger">
                                                <i class="fa fa-trash"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


