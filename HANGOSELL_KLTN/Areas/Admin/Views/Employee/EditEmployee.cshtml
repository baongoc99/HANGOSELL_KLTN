@model HANGOSELL_KLTN.Models.EF.ModelDataset

@{
    ViewData["Title"] = "Edit Employee";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="page-wrapper">
    <div class="content container-fluid">
        <div class="page-header">
            <div class="row align-items-center">
                <div class="col">
                    <h3 class="page-title">Edit Employee</h3>
                    <ul class="breadcrumb">
                        <li class="breadcrumb-item"><a href="time-table.html">Employee</a></li>
                        <li class="breadcrumb-item active">Edit Employee</li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="card">
                <div class="card-body">
                    <form action="/Admin/Employee/Edit" method="POST" enctype="multipart/form-data">
                        <input type="hidden" class="form-control" id="Id" name="Id" value="@Model.employee.Id" required>

                        <div class="row">
                            <div class="col-12 col-sm-4">
                                <div class="form-group local-forms">
                                    <label for="CodeEmployee" class="form-label">CodeEmployee<span class="login-danger">*</span></label>
                                    <input type="text" class="form-control" id="CodeEmployee" name="CodeEmployee" value="@Model.employee.CodeEmployee" required>
                                </div>
                            </div>
                            <div class="col-12 col-sm-4">
                                <div class="form-group local-forms">
                                    <label for="EmployeeName" class="form-label">EmployeeName <span class="login-danger">*</span></label>
                                    <input type="text" class="form-control" id="EmployeeName" name="EmployeeName" value="@Model.employee.EmployeeName" required>
                                </div>
                            </div>
                            <div class="col-12 col-sm-4">
                                <div class="form-group local-forms">
                                    <label for="email" class="form-label">Email <span class="login-danger">*</span></label>
                                    <input type="email" class="form-control" id="email" name="Email" value="@Model.employee.Email" required>
                                </div>
                            </div>
                            <div class="col-12 col-sm-4">
                                <div class="form-group local-forms">
                                    <label for="DateOfBirth" class="form-label">DateOfBirth <span class="login-danger">*</span></label>
                                    <input type="date" class="form-control" id="dateOfBirth datetimepicker" name="DateOfBirth" value="@Model.employee.DateOfBirth.ToString("yyyy-MM-dd")" required>
                                </div>
                            </div>
                            <div class="col-12 col-sm-4">
                                <div class="form-group local-forms">
                                    <label for="phoneNumber" class="form-label">Phone Number <span class="login-danger">*</span></label>
                                    <input type="tel" class="form-control" id="phoneNumber" name="PhoneNumber" value="@Model.employee.PhoneNumber">
                                </div>
                            </div>
                            <div class="col-12 col-sm-4">
                                <div class="form-group local-forms">
                                    <label for="Address" class="form-label">Address <span class="login-danger">*</span></label>
                                    <input type="text" class="form-control" id="Address" name="Address" value="@Model.employee.Address" required>
                                </div>
                            </div>
                            <div class="col-12 col-sm-4">
                                <div class="form-group local-forms">
                                    <label for="JoinDate" class="form-label">JoinDate <span class="login-danger">*</span></label>
                                    <input type="date" class="form-control datetimepicker" id="JoinDate" value="@Model.employee.JoinDate" name="JoinDate">
                                </div>
                            </div>
                            <div class="col-12 col-sm-4">
                                <div class="form-group local-forms">
                                    <label for="Status" class="form-label">Status <span class="login-danger">*</span></label>
                                    <select class="form-control select" name="status">
                                        <option disabled>Select Status</option>
                                        <option value="Active">Active</option>
                                        <option value="Disable">Disable</option>
                                        <option value="Inactive">Inactive</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-12 col-sm-4">
                                <div class="form-group local-forms">
                                    <label>Role <span class="login-danger">*</span></label>
                                    <select class="form-control select" name="RoleId">
                                        @if (Model != null)
                                        {
                                            @foreach (var employee in Model.roles)
                                            {
                                                <option value="@employee.Id" @(employee.Id == Model.employee.RoleID ? "selected" : "")>@employee.RoleName</option>
                                            }

                                        }
                                        else
                                        {
                                            <option>0</option>
                                        }
                                    </select>
                                </div>
                            </div>



                            <div class="col-12">
                                <div class="student-submit">
                                    <button type="submit" class="btn btn-primary">Edit</button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>

    </div>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>

