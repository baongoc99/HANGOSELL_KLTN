@model List<HANGOSELL_KLTN.Models.EF.Employee>
@using HANGOSELL_KLTN.Configuration
@inject SharedViewLocalizer _localizer
@{
    ViewData["Title"] = "List Employee";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="page-wrapper">
    <div class="content container-fluid">
        <div class="page-header">

            <div class="row align-items-center">
                <div class="col">
                    <h3 class="page-title">@_localizer.GetLocalizedString("List") @_localizer.GetLocalizedString("Employee")</h3>
                    <div class="col-auto text-end float-end ms-auto download-grp">
                        <a href="/Admin/Employee/Download" class="btn btn-outline-success me-2" style="">
                            <i class="fas fa-download"></i> @_localizer.GetLocalizedString("Export") 
                        </a>
                        <a href="/Admin/Employee" class="btn btn-outline-gray me-2 active">
                            <i class="fa fa-list" aria-hidden="true"></i>
                        </a>
                        <a href="/Admin/Employee/GridEmployee" class="btn btn-outline-gray me-2">
                            <i class="fa fa-th" aria-hidden="true"></i>
                        </a>
                        <a href="/Admin/Employee/CreateEmployee" class="btn btn-outline-gray me-2">
                            <i class="fas fa-plus"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="card bg-comman w-100">
                <div class="card-body">

                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th class="text-center">STT</th>
                                <th class="text-center">@_localizer.GetLocalizedString("Employee Code")</th>
                                <th class="text-center">@_localizer.GetLocalizedString("Employee Name")</th>
                                <th class="text-center">Email</th>
                                @* <th class="text-center">DateOfBirth</th>
                                <th class="text-center">PhoneNumber</th>
                                <th class="text-center">Address</th> *@
                                <th class="text-center">@_localizer.GetLocalizedString("Join Date")</th>
                                <th class="text-center">@_localizer.GetLocalizedString("Status")</th>
                                <th class="text-center">@_localizer.GetLocalizedString("Position")</th>
                                <th class="text-center">@_localizer.GetLocalizedString("Roles")</th>
                                <th class="text-center">@_localizer.GetLocalizedString("Action")</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td class="text-center">@item.Id</td>
                                    <td class="text-center">@item.CodeEmployee</td>
                                    <td class="text-center">@item.EmployeeName</td>
                                    <td class="text-center">@item.Email</td>
                                    @* <td class="text-center">@item.DateOfBirth.ToString("yyyy-MM-dd")</td>
                                    <td class="text-center">@item.PhoneNumber</td>
                                    <td class="text-center">@item.Address</td> *@
                                    <td class="text-center">@item.JoinDate.ToString("yyyy-MM-dd")</td>
                                    <td class="text-center">@item.Status</td>
                                    <td class="text-center">@item.Position</td>
                                    <td class="text-center">@item.Role.RoleName</td>
                                    <td class="text-center">
                                        <a href="/Admin/Employee/EditEmployee?id=@item.Id" class="btn btn-sm btn-warning">
                                            <i class="fa fa-edit"></i>
                                        </a>
                                        <a href="/Admin/UserRoles/DetailUserRoles/@item.Id" class="btn btn-sm btn-info">
                                            <i class="fa fa-info-circle"></i>
                                        </a>
                                        <a href="/Admin/Employee/Delete?id=@item.Id" class="btn btn-sm btn-danger" onclick="return confirm('Bạn có chắc chắn muốn xóa nhân viên này?');">
                                            <i class="fa fa-trash"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

