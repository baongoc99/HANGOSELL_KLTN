                                    </tbody>
                                </table>
                                <hr />
                                <div class="row">
                                    <div class="col-6 ">
                                        <div class="form-group local-forms">
                                            <label for="CodeEmployee" class="form-label">Status <span class="login-danger">*</span></label>
                                            <textarea type="text" class="form-control" id="Status" name="Status" required></textarea>
                                        </div>
                                    </div>
                                    <div class="col-6 ">
                                        <div class="row">
                                            <table class="table table-striped">
                                                <thead>
                                                    <tr>
                                                        <th class="text-center">Total </th>
                                                        <th class="text-center">@ViewData["TongTien"]</th>
                                                    </tr>
                                                    <tr>
                                                        <th class="text-center">Sale</th>
                                                        <th class="text-center">000</th>
                                                    </tr>
                                                    <tr>
                                                        <th class="text-center">Total Price</th>
                                                        <th class="text-center">@ViewData["TongTien"]</th>
                                                    </tr>
                                                </thead>
                                            </table>
                                        </div>
                                    </div>

                                </div>
                                <div class="col-12 text-end">
                                    <div class="student-submit">
                                        <button type="submit" class="btn btn-primary">Create Invoice</button>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </form>
                    <hr />
