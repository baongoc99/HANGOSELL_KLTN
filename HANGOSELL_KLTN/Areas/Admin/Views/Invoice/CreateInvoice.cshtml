                                                            <i class="fa fa-edit"></i>
                                                        </a>
                                                        <a href="/Admin/Customer/Delete" class="btn btn-sm btn-danger">
                                                            <i class="fa fa-trash"></i>
                                                        </a>
                                                    </td>
                                                </tr>
                                            }

