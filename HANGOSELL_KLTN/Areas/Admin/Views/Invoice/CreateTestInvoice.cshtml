@model InvoiceViewModel

<div class="page-wrapper">
    <div class="content container-fluid">
        <h2>Tạo mã QR VietQR</h2>

        <form asp-area="Admin" asp-controller="Invoice" asp-action="CreateInvoiceTest" method="post">
            <div>
                <label asp-for="Amount">Số tiền:</label>
                <input asp-for="Amount" type="number" step="0.01" required />
            </div>
            <button type="submit">Tạo mã QR</button>
        </form>
    </div>
</div>