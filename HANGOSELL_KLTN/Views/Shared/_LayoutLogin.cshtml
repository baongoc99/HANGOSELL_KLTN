<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=0">
    <title>Login</title>
    <link rel="shortcut icon" href="@Url.Content("~/Client/img/iconlogo.png")">
    <link rel="stylesheet" href="@Url.Content("~/Client/plugins/bootstrap/css/bootstrap.min.css")">
    <link rel="stylesheet" href="@Url.Content("~/Client/plugins/feather/feather.css")">
    <link rel="stylesheet" href="@Url.Content("~/Client/plugins/icons/flags/flags.css")">
    <link rel="stylesheet" href="@Url.Content("~/Client/plugins/fontawesome/css/fontawesome.min.css")">
    <link rel="stylesheet" href="@Url.Content("~/Client/plugins/fontawesome/css/all.min.css")">
    <link rel="stylesheet" href="@Url.Content("~/Client/plugins/select2/css/select2.min.css")">
    <link rel="stylesheet" href="@Url.Content("~/Client/css/style.css")">


    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css">

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script>



    <link rel="stylesheet" href="@Url.Content("~/Client/css/toastr.min.css")">
    <script src="@Url.Content("~/Client/js/toastr_jquery.min.js")"></script>
    <script src="@Url.Content("~/Client/js/toastr.min.js")"></script>


</head>

<body>
    <style>
        .invalid-feedback {
            font-size: 14px;
        }
    </style>
    <div class="main-wrapper login-body">
        <div class="login-wrapper">
            <div class="container">
                <div class="loginbox">
                    <div class="login-left">
                        <img class="img-fluid" src="@Url.Content("~/Client/img/Logo.png")" alt="Logo">
                    </div>
                    @RenderBody()
                </div>
            </div>
        </div>
    </div>
    <script src="@Url.Content("~/Client/js/jquery-3.6.0.min.js")"></script>
    <script src="@Url.Content("~/Client/plugins/bootstrap/js/bootstrap.bundle.min.js")"></script>
    <script src="@Url.Content("~/Client/js/feather.min.js")"></script>
    <script src="@Url.Content("~/Client/plugins/select2/js/select2.min.js")"></script>
    <script src="@Url.Content("~/Client/js/script.js")"></script>
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - NCKH_HANGOSELL - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    @* Render Scripts section *@
    @RenderSectionAsync("Scripts", required: false)
</body>

</html>

