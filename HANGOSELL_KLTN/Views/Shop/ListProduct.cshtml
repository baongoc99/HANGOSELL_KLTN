@model List<HANGOSELL_KLTN.Models.EF.ModelDataset>

@{
    ViewData["Title"] = "Trang chủ";
    Layout = "~/Views/Shared/_LayoutHome.cshtml";
}

<!-- Product Section Begin -->
<section class="product spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-3 col-md-5">
                <div class="sidebar">
                    <div class="sidebar__item">
                        <h4>Department</h4>
                        <ul>
                            @if (Model != null && Model.Count() > 0)
                            {
                                foreach (var item in Model[0].categories)
                                {
                                    <li><a href="/shop/listproduct?idcategory=@item.Id&name=@item.Title">@item.Title</a></li>
                                }
                            }
                        </ul>
                    </div>
                </div>
            </div>
            <div class="col-lg-9 col-md-7">
                
                <div class="filter__item">
                    <div class="row">
                        <div class="col-lg-4 col-md-5">
                            <div class="filter__sort">
                                <span>Sort By</span>
                                <select id="sortPriceSelect">
                                    <option value="">---Choose---</option>
                                    <option value="asc">Thấp đến cao</option>
                                    <option value="desc">Cao đến thấp</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-lg-4 col-md-4">
                            <div class="filter__found">
                                <h6><span>@ViewData["tongproduct"]</span> Products found</h6>
                            </div>
                        </div>
                        <div class="col-lg-4 col-md-3">
                            <div class="filter__option">
                                <span class="icon_grid-2x2"></span>
                                <span class="icon_ul"></span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">

                    @if (Model != null && Model.Count() > 0)
                    {
                        foreach (var item in Model[0].products)
                        {
                            <div class="col-lg-4 col-md-6 col-sm-6">

                                <div class="product__item">
                                    <div class="product__item__pic set-bg" data-setbg="~/@item.Image">
                                        <img src="~/@item.Image" alt="@item.Title" class="featured__item__img">

                                        <ul class="product__item__pic__hover">
                                            <li><a href="#"><i class="fa fa-heart"></i></a></li>
                                            <li><a href="#"><i class="fa fa-retweet"></i></a></li>
                                            <li>
                                                <a href="" onclick="addTocart('@item.Id', '@item.Title', '@item.Price', '@item.Image')"><i class="fa fa-shopping-cart"></i></a>
                                            </li>
                                        </ul>
                                    </div>
                                    <div class="product__item__text">
                                        <h6><a href="#">@item.Title</a></h6>
                                        <h5>@item.Price.ToString("N0") đ</h5>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                </div>
                <div class="product__pagination">
                    <a href="#">1</a>
                    <a href="#">2</a>
                    <a href="#">3</a>
                    <a href="#"><i class="fa fa-long-arrow-right"></i></a>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Product Section End -->

<script>
    // Lắng nghe sự kiện thay đổi giá trị trong thẻ select
    document.getElementById("sortPriceSelect").addEventListener("change", function () {
        var selectedSortOrder = this.value; // Lấy giá trị của lựa chọn (asc hoặc desc)
        // Điều hướng tới URL với tham số sortOrder
        window.location.href = "/shop/listproduct?sortOrder=" + selectedSortOrder;
    });
</script>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<script>
    function addTocart(productId, productName, price, imageUrl) {
        $.ajax({
            url: '/Cart/AddToCart',
            type: 'POST',
            data: {
                productId: productId,
                productName: productName,
                price: price,
                anhsps: imageUrl,
                quantitys: 1
            },
            success: function (response) {
                if (response.success) {
                    // Hiển thị thông báo thành công từ message của response
                    alert(response.message);
                } else {
                    // Nếu có lỗi thì hiển thị thông báo lỗi
                    alert('Có lỗi xảy ra khi thêm sản phẩm vào giỏ hàng.');
                }
            },
            error: function (error) {
                console.log('Error: ', error);
                alert('Đã xảy ra lỗi khi thêm sản phẩm vào giỏ hàng. Vui lòng thử lại sau!');
            }
        });
    }
</script>