@model List<HANGOSELL_KLTN.Models.EF.CartItem>

@{
    ViewData["Title"] = "Trang chủ";
    Layout = "~/Views/Shared/_LayoutHome.cshtml";
}

<!-- Checkout Section Begin -->
<section class="checkout spad">
    <div class="container">
        <div class="checkout__form">
            <h4>Billing Details</h4>
            <form action="/cart/DatHang" method="post">
                <div class="row">
                    <div class="col-lg-8 col-md-6">
                        <div class="checkout__input">
                            <p>Company Name</p>
                            <input type="text" name="CompanyName">
                        </div>
                        <div class="checkout__input">
                            <p>Contact Person (Customer Name)<span>*</span></p>
                            <input type="text" value="@ViewData["ContactPersonkh"]">
                        </div>
                        <div class="checkout__input">
                            <p>Address<span>*</span></p>
                            <input type="text" value="@ViewData["Addresskh"]" name="Address" placeholder="Street Address" class="checkout__input__add">
                        </div>
                        <div class="row">
                            <div class="col-lg-6">
                                <div class="checkout__input">
                                    <p>Phone<span>*</span></p>
                                    <input type="text" name="PhoneNumber" value="@ViewData["PhoneNumberkh"]">
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="checkout__input">
                                    <p>Email<span>*</span></p>
                                    <input type="text" value="@ViewData["Emailkh"]">
                                </div>
                            </div>
                        </div>

                        <div class="checkout__input">
                            <p>Order notes</p>
                            <input type="text"
                                   placeholder="Notes about your order, e.g. special notes for delivery.">
                        </div>
                    </div>
                    <div class="col-lg-4 col-md-6">
                        <div class="checkout__order">
                            <h4>Your Order</h4>
                            <div class="checkout__order__products">Products <span>Total</span></div>
                            <ul>
                                @if (Model != null && Model.Count() > 0)
                                {
                                    foreach (var item in Model)
                                    {
                                        <li>
                                            @item.productName <span>
                                                @String.Format("{0:C}",((@item.productPrice * @item.quantity)))
                                            </span>
                                        </li>
                                    }
                                }
                            </ul>
                            <div class="checkout__order__subtotal">
                                Subtotal <span>
                                    @String.Format("{0:C}",Convert.ToDecimal(ViewData["tongtien"]))
                                </span>
                            </div>
                            <div class="checkout__order__total">
                                Total <span>
                                    @String.Format("{0:C}",Convert.ToDecimal(ViewData["tongtien"]))
                                </span>
                            </div>

                            <div class="checkout__input__checkbox">
                                <label for="payment">
                                    Check Payment
                                    <input type="checkbox" id="payment">
                                    <span class="checkmark"></span>
                                </label>
                            </div>
                            <div class="checkout__input__checkbox">
                                <label for="paypal">
                                    Paypal
                                    <input type="checkbox" id="paypal">
                                    <span class="checkmark"></span>
                                </label>
                            </div>
                            <button type="submit" class="site-btn">PLACE ORDER</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</section>
<!-- Checkout Section End -->